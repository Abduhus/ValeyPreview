{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist/server",
    "rootDir": "./",
    "module": "CommonJS",
    "target": "ES2020",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "types": []
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}